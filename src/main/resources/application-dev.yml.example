# Application Configuration Example - DEVELOPMENT PROFILE
# 
# This profile is optimized for local development with detailed logging and debugging.
# Uses H2 embedded database with development-friendly settings.
#
# Activate this profile with:
# - export SPRING_PROFILES_ACTIVE=dev
# - Or: mvn spring-boot:run -Dspring-boot.run.arguments="--spring.profiles.active=dev"
# - Or add to .env: SPRING_PROFILES_ACTIVE=dev
#
# For the actual configuration, copy this file to application-dev.yml

spring:
  application:
    name: archie-blueprint-to-boot

  # Database Configuration - H2 embedded for development
  datasource:
    url: jdbc:h2:mem:archiedb
    driver-class-name: org.h2.Driver
    username: sa
    password: 
    hikari:
      maximum-pool-size: 5
      minimum-idle: 2

  jpa:
    hibernate:
      ddl-auto: create-drop  # Drop and recreate schema on each startup (dev only)
    show-sql: true          # Show SQL statements for debugging
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.H2Dialect
        use_sql_comments: true

  # H2 Console - Enabled for development
  h2:
    console:
      enabled: true
      path: /h2-console
      settings:
        web-allow-others: false

  # File Upload Configuration
  servlet:
    multipart:
      max-file-size: 50MB     # Generous for development
      max-request-size: 50MB
      enabled: true

  # Spring AI Configuration (for Gemini API)
  ai:
    openai:
      api-key: ${GEMINI_API_KEY:}
      base-url: https://generativelanguage.googleapis.com/v1beta/openai
      chat:
        options:
          model: ${GEMINI_MODEL:gemini-2.0-flash}
          temperature: 0.7              # Higher temperature for more creativity
          max-tokens: ${GEMINI_MAX_TOKENS:4096}

# JWT Configuration - Development
jwt:
  secret: ${JWT_SECRET:dev-secret-key-change-in-production}
  access-token-expiration-ms: 3600000      # 1 hour
  refresh-token-expiration-ms: 2592000000  # 30 days

# Google Gemini API Configuration
gemini:
  api:
    key: ${GEMINI_API_KEY:}
  model: ${GEMINI_MODEL:gemini-2.0-flash}

# Thymeleaf Configuration
thymeleaf:
  cache: false              # Disable caching for instant template reloads
  prefix: classpath:/templates/
  suffix: .html

# Application Configuration
archie:
  upload:
    directory: ./target/archie-uploads
  generation:
    base-package: ${BASE_PACKAGE:com.generated}
    output-directory: ./target/archie-projects

# Actuator Configuration - Full exposure for development
management:
  endpoints:
    web:
      exposure:
        include: "*"       # Expose all actuator endpoints in dev
  endpoint:
    health:
      show-details: always  # Show all health details
    env:
      enabled: true
    configprops:
      enabled: true
  metrics:
    export:
      simple:
        enabled: true

# Logging Configuration - Verbose for development
logging:
  level:
    root: INFO
    com.archie: DEBUG
    org.springframework: DEBUG
    org.springframework.security: DEBUG
    org.springframework.ai: DEBUG
    org.springframework.boot.actuate: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE
  pattern:
    console: "%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"
    file: "%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"
  file:
    name: logs/archie-dev.log
    max-size: 10MB
    max-history: 10

# Server Configuration
server:
  port: ${SERVER_PORT:8080}
  error:
    include-message: always
    include-binding-errors: always
    include-stacktrace: always      # Show stack traces in dev
    include-exception: true
  compression:
    enabled: false                  # Easier debugging without compression

# DevTools Configuration (for hot reload)
spring:
  devtools:
    restart:
      enabled: true
      exclude: "static/**,templates/**"
    livereload:
      enabled: true

# OpenAPI / Swagger Configuration
springdoc:
  api-docs:
    path: /api-docs
  swagger-ui:
    path: /swagger-ui.html
    enabled: true
    show-common-extensions: true
    doc-expansion: list

# CORS Configuration - Permissive for development
cors:
  allowed-origins: "http://localhost:3000,http://localhost:5173"
  allowed-methods: "GET,POST,PUT,DELETE,OPTIONS"
  allowed-headers: "*"
  max-age: 3600
