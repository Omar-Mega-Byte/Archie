# ==============================================================================
# AI CONFIGURATION (REQUIRED)
# ==============================================================================

# Google AI Studio API Key (FREE - no billing required)
# Get your key from: https://aistudio.google.com/
GEMINI_API_KEY=Put your_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# ==============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# ==============================================================================

# Database Type: h2 (default) or postgres
DATABASE_TYPE=h2

# PostgreSQL Configuration (if using postgres profile)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=archiedb
# DB_USERNAME=archie
# DB_PASSWORD=your-secure-password

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Server Port
SERVER_PORT=8080

# Upload Directory (where diagram images are stored)
# Leave empty to use system temp directory
UPLOAD_DIRECTORY=

# Generation Output Directory (where generated projects are saved)
# Leave empty to use system temp directory
OUTPUT_DIRECTORY=

# Generated Project Base Package
BASE_PACKAGE=com.generated

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Log Level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO
LOG_LEVEL_ARCHIE=DEBUG
LOG_LEVEL_SPRING_AI=DEBUG

# ==============================================================================
# SECURITY CONFIGURATION (OPTIONAL)
# ==============================================================================

# Enable/Disable H2 Console (set to false in production)
H2_CONSOLE_ENABLED=true

# Actuator Endpoints (comma-separated)
ACTUATOR_ENDPOINTS=health,info,metrics

# ==============================================================================
# SPRING AI OPTIONS
# ==============================================================================

# Temperature (0.0 - 1.0, lower = more deterministic)
GEMINI_TEMPERATURE=0.3

# Max Output Tokens
GEMINI_MAX_TOKENS=4096

# ==============================================================================
# FILE UPLOAD LIMITS
# ==============================================================================

# Maximum file size for diagram uploads
MAX_FILE_SIZE=10MB

# Maximum request size
MAX_REQUEST_SIZE=10MB
# ==============================================================================